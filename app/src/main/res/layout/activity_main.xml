<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="25dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:text="Conversation"
            android:fontFamily="@font/conv_font"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/switch_icon"
            android:padding="5dp"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:text="Monnaie"
            android:fontFamily="@font/conv_font"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:text="Entrez les détails de la conversion à convertir"
            android:textAlignment="center"
            android:fontFamily="@font/conv_font"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:layout_height="60dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginLeft="55dp"
                android:layout_marginRight="55dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="0.5dp"
                app:cardBackgroundColor="#F1F1F3"
                android:layout_height="match_parent">
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_width="match_parent"
                    app:met_hideUnderline="true"
                    android:inputType="numberDecimal"
                    android:id="@+id/currency_amount"
                    android:imeOptions="actionNext"
                    android:paddingRight="10dp"
                    android:textColor="@color/third_color"
                    android:hint="Montant"
                    android:paddingLeft="15dp"
                    android:fontFamily="@font/conv_font"
                    android:textSize="12dp"
                    android:layout_height="match_parent"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="50dp"
            android:orientation="vertical"
            android:layout_height="120dp">
            <RadioGroup
                android:layout_width="match_parent"
                android:id="@+id/m_rad_group"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/euro_dzd_radio"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/conv_font"
                    android:layout_gravity="center_horizontal"
                    android:text="Euro-Dinar Algerien"
                    android:layout_marginTop="20dp"
                    android:textSize="17dp" />
                <RadioButton
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/conv_font"
                    android:id="@+id/dzd_euro_radio"
                    android:layout_gravity="center_horizontal"
                    android:text="Dinar Algerien-Euro"
                    android:layout_marginTop="20dp"
                    android:textSize="17dp" />
            </RadioGroup>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="20dp"
            android:id="@+id/amount_converted"
            android:text="1500DA"
            android:maxLines="1"
            android:visibility="gone"
            android:textAlignment="center"
            android:ellipsize="end"
            android:textStyle="bold"
            android:fontFamily="@font/conv_font"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:onClick="auClicMethode"
            android:layout_marginHorizontal="50dp"
            app:cardElevation="0.5dp"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardCornerRadius="20dp"
            android:layout_height="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:text="Convert"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:ellipsize="end"
                    android:fontFamily="@font/conv_font"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>